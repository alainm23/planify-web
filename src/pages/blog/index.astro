---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import Markdown from "@/components/Markdown.astro";

const allPosts = (await getCollection("blog")).sort(
  (a: any, b: any) => b.data.date.getTime() - a.data.date.getTime()
);

const POSTS_PER_PAGE = 4;
const currentPage = 1;
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const posts = allPosts.slice(0, POSTS_PER_PAGE);

function generateSlug(title: string): string {
  return title
    .toLowerCase()
    .replace(/[^a-z0-9\s-]/g, "")
    .replace(/\s+/g, "-")
    .replace(/-+/g, "-")
    .trim();
}
---

<Layout
  title="Planify Blog - Updates, Tips & News"
  description="Stay updated with the latest Planify news, features, tips, and announcements from the development team."
>
  <!-- Hero -->
  <SectionContainer class="py-16 md:py-24 px-4">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-100 dark:bg-purple-900/30 rounded-full text-sm font-medium text-purple-700 dark:text-purple-400 mb-6">
        <Icon name="sparkles-2" class="w-4 h-4" />
        Latest Updates
      </div>
      
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        Planify Blog
      </h1>
      
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        News, updates, and tips from the Planify team
      </p>
    </div>
  </SectionContainer>

  <!-- Blog Posts -->
  <SectionContainer class="pb-24 px-4">
    <div class="max-w-5xl mx-auto">

      <div class="space-y-12">
        {
          posts.map((post: any) => {
            const slug = generateSlug(post.data.title);
            return (
              <article
                id={slug}
                class="bg-gray-50 dark:bg-gray-800/50 rounded-2xl p-8 md:p-12 border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-700 transition-colors scroll-mt-20"
              >
                <div class="mb-6">
                  <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
                    <a
                      href={`#${slug}`}
                      class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <time datetime={post.data.date.toISOString()}>
                      {(() => {
                        const dateStr = post.data.date.toISOString().split('T')[0];
                        const [year, month, day] = dateStr.split('-');
                        const localDate = new Date(year, month - 1, day);
                        return localDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                      })()}
                    </time>
                  </div>
                </div>
                <div class="prose prose-lg dark:prose-invert max-w-none">
                  <Markdown post={post} />
                </div>
              </article>
            );
          })
        }
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="flex justify-center items-center gap-2 mt-16">
          {currentPage > 1 && (
            <a
              href={`/blog/${currentPage - 1}`}
              class="px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-white rounded-lg transition-colors flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Previous
            </a>
          )}

          <div class="flex gap-2">
            {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
              <a
                href={`/blog/${page}`}
                class={`px-4 py-2 rounded-lg transition-colors ${
                  page === currentPage
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-white'
                }`}
              >
                {page}
              </a>
            ))}
          </div>

          {currentPage < totalPages && (
            <a
              href={`/blog/${currentPage + 1}`}
              class="px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-white rounded-lg transition-colors flex items-center gap-2"
            >
              Next
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </SectionContainer>
</Layout>

<script>
  // Handle hash navigation for old blog URLs
  if (window.location.hash) {
    const hash = window.location.hash;
    const element = document.querySelector(hash);
    if (element) {
      setTimeout(() => {
        element.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }, 100);
    }
  }
</script>
