---
import Layout from "@/layouts/Layout.astro";
import Releases from "@/components/Releases.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import { Icon } from "astro-icon/components";
import releases from "@/data/releases.json";

const latestRelease = releases[0];
const totalReleases = releases.length;
---

<Layout
  title="Planify Changelog - Release History"
  description="Track all Planify updates, new features, bug fixes, and improvements. Stay up to date with the latest releases."
>
  <!-- Hero Section -->
  <main class="px-4">
    <SectionContainer class="py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 rounded-full text-sm font-medium text-blue-700 dark:text-blue-400 mb-6">
          <Icon name="sparkles-2" class="w-4 h-4" />
          Release History
        </div>
        
        <h1
          class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 dark:text-white mb-4"
        >
          Changelog
        </h1>
        
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
          Every update, improvement, and bug fix. Discover what's new in Planify.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-y-6 gap-x-8 mb-8">
          <div class="text-center px-4">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-1">
              {latestRelease.version}
            </div>
            <div class="text-sm font-medium text-gray-600 dark:text-gray-400">Current Release</div>
          </div>
          <div class="hidden sm:block w-px bg-gray-300 dark:bg-gray-700"></div>
          <div class="text-center px-4">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-1">
              {totalReleases}+
            </div>
            <div class="text-sm font-medium text-gray-600 dark:text-gray-400">Versions Released</div>
          </div>
          <div class="hidden sm:block w-px bg-gray-300 dark:bg-gray-700"></div>
          <div class="text-center px-4">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-1">
              {latestRelease.date}
            </div>
            <div class="text-sm font-medium text-gray-600 dark:text-gray-400">Latest Update</div>
          </div>
        </div>


      </div>
    </SectionContainer>
  </main>

  <!-- Releases Timeline -->
  <SectionContainer class="pb-32 px-4 md:px-12">
    <Releases />
  </SectionContainer>
</Layout>
