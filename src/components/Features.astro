---
import { Icon } from "astro-icon/components";

const FEATURES = [
  {
    title: "Modern GTK4 Interface",
    description:
      "Built with GTK4 and libadwaita for a native GNU/Linux experience. Clean, intuitive design with seamless dark mode integration. Lightning-fast performance that respects your system resources.",
    image: "/features/planify.png",
    alt: "Planify main interface showing modern GTK4 design",
    icon: "sparkles-2",
  },
  {
    title: "Drag & Drop Everything",
    description:
      "Organize effortlessly with natural gestures. Drag tasks between projects, create sub-projects, convert tasks to subtasks, and reorder with smooth animations. The Magic Button makes adding tasks exactly where you want them a breeze.",
    image: "/features/drag-drop.png",
    alt: "Drag and drop interface showing task organization",
    icon: "wand",
  },
  {
    title: "Cloud Sync & Privacy",
    description:
      "Full synchronization with Todoist and Nextcloud/CalDAV servers (Radicale, Baïkal). Work offline and sync when you're back online. Multiple accounts supported. Your data, your choice.",
    image: "/features/sync.png",
    alt: "Sync settings showing Todoist and Nextcloud integration",
    icon: "shield-tick",
  },
  {
    title: "Smart Organization",
    description:
      "Sections, labels, priorities, and custom filters. Board view for visual planning. Calendar integration to see your schedule. Progress tracking for projects. Find anything instantly with powerful search.",
    image: "/features/organization.png",
    alt: "Project organization with sections and labels",
    icon: "file-text",
  },
  {
    title: "Rich Task Details",
    description:
      "Markdown support in titles and descriptions. Multiple reminders per task. Recurring tasks with flexible patterns. File attachments and links. Notes, priorities, and deadlines—all in one place.",
    image: "/features/task.png",
    alt: "Task detail view with markdown, attachments, and reminders",
    icon: "file-text",
  },
  {
    title: "Quick Add & Shortcuts",
    description:
      "Add tasks from anywhere with a global keyboard shortcut. Natural language date parsing in English and Spanish. Use @ for labels, # for projects, ! for priorities. Keep adding mode for rapid task entry.",
    image: "/features/quick-add.png",
    alt: "Quick Add window with keyboard shortcuts",
    icon: "sparkles-2",
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
  {
    FEATURES.map(({ image, title, description, icon, alt }) => (
      <article class="flex flex-col group">
        <div class="relative overflow-hidden rounded-xl shadow-lg transition-all duration-500 group-hover:-translate-y-1 group-hover:shadow-2xl mb-6">
          <img
            alt={alt}
            class="w-full h-48 object-cover object-top transition-transform duration-500 group-hover:scale-105"
            src={image}
            loading="lazy"
          />
        </div>

        <div class="flex items-center gap-3 mb-3">
          <Icon name={icon} class="w-7 h-7 text-blue-500 dark:text-blue-400 flex-shrink-0" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
        </div>
        <p class="text-base leading-relaxed text-gray-700 dark:text-gray-400">
          {description}
        </p>
      </article>
    ))
  }
</div>
